<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name = "struts.devMode" value = "true" />
    <package name="default" namespace="/" extends="struts-default">
        <action name="index" method="execute" class="org.rivercrane.actions.DefaultAction">
            <result name="success">index.jsp</result>
        </action>
        <action name="login" method="execute" class="org.rivercrane.actions.LoginAction">
            <result name="success">views/success.jsp</result>
            <result name="input">views/Error.jsp</result>
            <result name="error">views/notfound.jsp</result>
        </action>
    </package>

</struts>